<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_trabajo"
    tools:context=".Carne">

    <ImageView
    android:layout_width="140dp"
    android:layout_gravity="center"
    android:layout_height="140dp"
    android:background="@drawable/icon_pierna_xxxhdpi"/>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/cocogoose_pro"
        android:text="Carne"
        android:textAlignment="center"
        android:textColor="@color/verde"
        android:textSize="30sp" />

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="60dp">
            <ImageView
                android:id="@+id/btnPiernil"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/icon_pierna_xxxhdpi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Piernil"
                android:textSize="30sp"
                android:textColor="@color/verde"
                android:fontFamily="@font/cocogoose_pro"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="60dp">
            <ImageView
                android:id="@+id/btnJamon"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/icon_jamon_xxxhdpi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jamon"
                android:textSize="30sp"
                android:textColor="@color/verde"
                android:fontFamily="@font/cocogoose_pro"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="60dp">

            <ImageView
                android:id="@+id/btnPollo"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/icon_pollo_xxxhdpi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pollos"
                android:textSize="30sp"
                android:textColor="@color/verde"
                android:fontFamily="@font/cocogoose_pro"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="38dp">
            <ImageView
                android:id="@+id/btnRes"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_carne_xxxhdpi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Res"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textColor="@color/verde"
                android:fontFamily="@font/cocogoose_pro"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp">
            <ImageView
                android:id="@+id/btnPescado"
                android:layout_marginLeft="10dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/icon_pescado_xxxhdpi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pescado"
                android:textSize="30sp"
                android:textColor="@color/verde"
                android:fontFamily="@font/cocogoose_pro"/>
        </LinearLayout>


    </LinearLayout>


       </LinearLayout>
   </ScrollView>

</LinearLayout>