<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Vegetales">

    <ImageView
        android:layout_width="140dp"
        android:layout_gravity="center"
        android:layout_height="140dp"
        android:background="@drawable/icon_zanahoria_xxxhdpi"/>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/cocogoose_pro"
        android:text="Vegetales"
        android:textAlignment="center"
        android:textColor="@color/verde"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp">
            <ImageView
                android:id="@+id/btnZanahoria"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/icon_zanahoria_xxxhdpi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zanahoria"
                android:textSize="30sp"
                android:textColor="@color/verde"
                android:fontFamily="@font/cocogoose_pro"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp">
            <ImageView
                android:id="@+id/btnCebolla"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/icon_cebolla_xxxhdpi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cebolla"
                android:textSize="30sp"
                android:textColor="@color/verde"
                android:fontFamily="@font/cocogoose_pro"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/btnRabano"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_rabano_xxxhdpi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rabano"
                android:textSize="30sp"
                android:textColor="@color/verde"
                android:fontFamily="@font/cocogoose_pro"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40dp">
            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/btnApio"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_apio_xxxhdpi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apio"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/verde"
                android:fontFamily="@font/cocogoose_pro"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/btnAjo"
                android:src="@drawable/icon_ajo_xxxhdpi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajo"
                android:textSize="30sp"
                android:layout_marginLeft="40dp"
                android:textColor="@color/verde"
                android:fontFamily="@font/cocogoose_pro"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="64dp">
            <ImageView
                android:id="@+id/btnBrocoli"
                android:layout_marginLeft="10dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/icon_brocoli_xxxhdpi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brocoli"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/verde"
                android:fontFamily="@font/cocogoose_pro"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>