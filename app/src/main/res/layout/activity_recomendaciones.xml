<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Recomendaciones">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/cocogoose_pro"
        android:text="Esto es para ti"
        android:textAlignment="center"
        android:textColor="@color/verde"
        android:textSize="30sp" />


    <ImageView
        android:layout_width="150dp"
        android:layout_height="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button" />


        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginTop="20dp"
            android:layout_width="280dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/pizza_img"
            app:shapeAppearanceOverlay="@style/circular"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_marginTop="30dp"
        android:layout_width="280dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@drawable/chiken_img"
        app:shapeAppearanceOverlay="@style/circular"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_marginTop="30dp"
        android:layout_width="280dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@drawable/pasta_img"
        app:shapeAppearanceOverlay="@style/circular"/>







</LinearLayout>